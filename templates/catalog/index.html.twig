{% extends "base.html.twig" %}
{% block title %} Homepage | {{parent()}} {% endblock %}
{% block body %}
    <h1>{{title}}</h1>


    <hr>

    <div>
        <a href="{{path('app_homepage')}}" class="btn btn-sm btn-primary">Hompage</a>
    </div>



    <hr>


    <div>
        <a href="{{path('app_browse', {slug: 'Category 1'})}}" class="btn btn-sm btn-primary">Category 1</a>
        <a href="{{path('app_browse', {slug: 'Category 2'})}}" class="btn btn-sm btn-primary">Category 2</a>
        <a href="{{path('app_browse', {slug: 'Category 3'})}}" class="btn btn-sm btn-primary">Category 3</a>
    </div>

    <ul class="data-list">
    {% for row in rows %}


        <li {{stimulus_controller('product', {url: path('app_ajax_produc_detail', {id: loop.index})})}} class="data-item">
            <a href="#" {{stimulus_action('product', 'showDeail')}}>{{row.name}} - {{row.desc}}</a> 
        </li>

    {% endfor %}
    </ul>
{% endblock %}