{% set generalMenu = this.getMenuItems() %}
<div id="footer" class="secondary_color">
<footer class="container py-5 footer">

    <div class="row mb-5">

        {% for menu  in generalMenu.withChilds %}
            <div class="col-6 col-md">
            <h5>Features</h5>
                <ul class="list-unstyled text-small">
                    {% for chilMenu in menu.menus %}
                        <li><a class="link-secondary" href="#">{{chilMenu.getTranslateName}}</a></li>
                    {% endfor %}
                </ul>
            </div>
        {% endfor %}

        <div class="col-6 col-md">
            <ul class="list-unstyled text-small">    
            {% for menu  in generalMenu.noChilds %}
                <li><a class="link-secondary" href="#">{{menu.getTranslateName}}</a></li>
            {% endfor %}
            </ul>
        </div>

        <div class="col-6 col-md">
            <h5>Contactenos</h5>
            <p>Description contact</p>
        </div>

    </div>

    <div class="row my-3">
    
        <div class="col-4 col-md">
            <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                <img width="80" alt="logo-footer" src="/uploads/logo/{{ app.session.get('appParam').logo }}">
            </a>
        </div>

        <div class="col-4 col-md text-center">
            <small class="d-block mb-3">&copy; {{app.session.get('appParam').name |upper}} {{"now"|date("Y")}}. {{'All rights reserved'| trans }}</small>
        </div>

        <div class="col-4 col-md text-end">
            <p>ESCENCIAL STUDIO</p>
        </div>

    </div>

</footer>

</div>