{% set translation = obj_widget.getTranlation %}
{% set gallery = obj_widget.gallery %}
{% set images = gallery.getGalleryImagesByLanguage(app.request.getLocale()) %}

<div id="owlCaroucelContainer" class="container my-3">
    <div class="row py-3">
        <div class="col-md-6">
            <h2>{{translation.name}}</h2>        
        </div>
        <div class="col-md-6 text-end">
            <a href="javascript:void(0);">{{'View more'|trans}}</a>        
        </div>
    </div>
    <div class="row">  
        <div class="col-md-12">
            <div id="owlCaroucel" {{stimulus_controller('owl-caroucel')}} class="owl-carousel owl-theme">
                {% for image in images %}
                    <div class="item">
                        <img class="" src="{{image.getImageUrl()}}">
                    </div>    
                {% endfor %}
            </div>
        </div>
    </div>
</div>