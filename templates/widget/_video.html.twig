{% set translation = obj_widget.getTranlation %}
<div class="presentation py-5" style="background-color: {{obj_widget.bgColor}}">

<div class="container">
    
    <div class="row">
        {% if translation %}
            <div class="col-md-6 py-3" style="
                background-image: url('{{obj_widget.bgImageUrl}}');
                background-repeat: no-repeat;
                background-position: left top;
                padding-left: 30%;
                ">
                
                    <img class="img-fluid" src="{{translation.getBodyImageUrl}}">
                    {#{{translation.name}}#}
                    {{translation.body|raw}}
                        
            </div>

            <div class="col-md-6">
                <div class="rounded-3 p-3" style="background-color:#000">
                    <iframe width="100%" height="250" src="https://www.youtube.com/embed/{{translation.bodyVideo}}?controls=0" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                </div>
            </div>

        {% else %}
            <div class="alert alert-warning">No translation available</div>
        {% endif %}
    </div>
</div>
</div>